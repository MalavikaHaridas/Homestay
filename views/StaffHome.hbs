<style>
  .hidetext {
    -webkit-text-security: disc;
    /* Default */
  }

  * {
    box-sizing: border-box;
  }

  table {
    counter-reset: tableCount;
  }

  .counterCell:before {
    content: counter(tableCount);
    counter-increment: tableCount;
  }


  td {
    padding: 25px;
    overflow: hidden;
    white-space: nowrap;
    width: 100px;
  }

</style>

