<section>
  <div class="container-fluid mt-4">
    <div>
      <a href="/staff/addguest/{{staff_id}}"><button class="btn btn-sm btn-success float-right mb-1">New
          Guest</button></a>
      <div>
        <table class="table border border-success table-responsive table-sm" style='table-layout:fixed'>
          <thead>
            <tr>
              <th scope="col">NO:</th>
              <th scope="col">Name</th>
              <th scope="col">Contact Number</th>
              <th scope="col">Age</th>
              <th scope="col">Nationality</th>
              <th scope="col">ID Proof</th>
              <th scope="col">ID Number</th>
              <th scope="col">Payment Method</th>
              <th scope="col">Payment ID</th>
              <th scope="col">Room Number</th>
              <th scope="col">Guest Number</th>
              <th scope="col">Check-In Date</th>
              <th scope="col">Amount</th>
            </tr>
          </thead>
          {{#each guestdetails}}
          <tbody>
            <tr>
              <td>{{inc @index}}</td>
              <td>{{this.Name}}</td>
              <td class="hidetext">{{this.Contact_Number}}</td>
              <td>{{this.Age}}</td>
              <td>{{this.Nationality}}</td>
              <td>{{this.ID_Proof}}</td>
              <td class="hidetext">{{this.ID_Number}}</td>
              <td>{{this.Payment_Method }}</td>
              <td class="hidetext">{{this.Payment_ID}}</td>
              <td>{{this.Room_No}}</td>
              <td>{{this.Guest_Number}}</td>
              <td>{{this.Check_In_Date}}</td>
              <td>{{this.Amount}}</td>
            </tr>
          </tbody>
          {{/each}}
        </table>
      </div>
    </div>
</section>
